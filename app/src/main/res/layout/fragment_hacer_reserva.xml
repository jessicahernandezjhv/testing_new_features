<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="25dp"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".FragmentHacerReserva">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textFechaID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:text="Fecha:" />

        <EditText
            android:id="@+id/editFechaID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="fecha dd/mm/aaaa"
            android:inputType="date" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textComensalesID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:text="Comensales:" />

        <EditText
            android:id="@+id/editComensalesID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="numero personas"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textNombreID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:text="Nombre:" />

        <EditText
            android:id="@+id/editNombreID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="nombre" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textTelefonoID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:text="Teléfono:" />

        <EditText
            android:id="@+id/editTelefonoID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="telefono"
            android:inputType="phone" />
    </LinearLayout>

    <TextView
        android:id="@+id/textComentariosID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:text="Comentarios" />

    <EditText
        android:id="@+id/editComentariosID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Alergias, peticiones especiales, ..." />

    <Button
        android:id="@+id/btnHacerReserva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:text="ENVIAR PETICIÓN" />
</LinearLayout>